" No compatible with vi
set nocompatible
" Enable line number
set number
set relativenumber
set cursorline

set t_Co=256

" Encoding
set encoding=utf-8

" Syntax highlight
syntax on
colorscheme base16-eighties

" Auto indent
set autoindent
" Tab size
set tabstop=4
" << >> size
set shiftwidth=4
" Use space instead of tab, eg. soft tab
set expandtab
" soft tab size
set softtabstop=4    

inoremap jj <ESC>

