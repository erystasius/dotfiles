partial alphanumeric_keys
xkb_symbols "smoothy" {
    include "altwin(swap_lalt_lwin)"

    key <LCTL> { [ ISO_Level3_Shift	] };
    key <CAPS> { [ Control_L		] };

    key <AC06> { [ h, H , Left, Left           ] };
    key <AC07> { [ j, J, Down, Down            ] };
    key <AC08> { [ k, K, Up, Up                ] };
    key <AC09> { [ l, L, Right, Right          ] };
};
